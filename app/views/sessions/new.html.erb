<h2 class="ui dividing header">Log In</h2>

<%= form_tag login_path, class: "ui form" do %>
    <div class="five wide field">
      <%= label_tag :email %>
      <%= text_field_tag :'user[email]' %>
    </div>
    <div class="five wide field">
      <%= label_tag :password %>
      <%= password_field_tag :'user[password]' %>
    </div>
    <%= submit_tag "Sign In", class: "ui green button" %>
<% end %>
<%= link_to(' Or log in with Facebook!', '/auth/facebook') %>

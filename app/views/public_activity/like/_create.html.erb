<div class="event">
  <div class="content">
    <div class="summary">
      <% if activity.trackable.try(:playlist) %>
          <%= link_to activity.owner.name, activity.owner if activity.owner %>
          liked
          <%= link_to activity.trackable.playlist.name, activity.trackable.playlist %>
          <div class="date">
            <%= activity.created_at.to_date %>
          </div>
      <% end %>
    </div>
  </div>
</div>

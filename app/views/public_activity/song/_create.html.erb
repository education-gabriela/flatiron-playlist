<div class="ui feed">
   <div class="event">
<div class="content">

  <div class="summary">
    <%= link_to activity.owner.name, activity.owner if activity.owner%>
    added a new song,
    <% if activity.trackable %>
      <%= link_to activity.trackable.title, activity.trackable %>
    <% else %>
      which has since been removed
    <% end %>
    <div class="date">
      <%=activity.created_at.to_date%>
      </div>

<div class="profile">
  <div style="float: left">
    <img class="ui small circular image" style="width: 110px;height:110px" src="http://gravatar.com/avatar/<%= @user.gravatar_hash %>?s=200">
  </div>
  <div>
    <h1 class="ui dividing header"><%= @user.name %> </h1><br>
    <div class="ui compact menu">
      <a class="item" href="<%= following_user_path(@user) %>">
        <i class="icon user"></i> Following
        <div class="floating ui red label"><%= @user.following.count %></div>
      </a>
      <a class="item" href="<%= followers_user_path(@user) %>">
        <i class="icon users"></i> Followers
        <div class="floating ui teal label"><%= @user.followers.count %></div>
      </a>
      <%= link_to "Edit Your Profile", edit_user_path(@user), class: "item" if @user.id == current_user.id %>
    </div>
    <%= render 'follow_form' unless @user.id == current_user.id %>
  </div>
</div>
<div class="clearing playlists" style="margin-top: 50px">
  <div class="ui cards">
    <% @user.playlists.each do |playlist| %>
        <%= render partial: "playlists/playlist", locals: {playlist: playlist, color: "olive"} %>
    <% end %>
  </div>
</div>
<div class="profile">
  <div style="float: left">
    <img class="ui small circular image" style="width: 110px;height:110px" src="http://gravatar.com/avatar/<%= current_user.gravatar_hash %>?s=200">
  </div>
  <div>
    <h1 class="ui dividing header"><%= @user.name %> </h1><br>
    <% if @user.id == current_user.id %>
        <%= link_to "Edit Your Profile", edit_user_path(@user), class: "ui button" %><br>
    <% else %>
        <%= render 'follow_form' %>
    <% end %><br>
  </div>
  <span class="clearfix"></span>
  <div class="stats">
    <a href="<%= following_user_path(@user) %>">
      <strong id="following" class="stat">
        <%= @user.following.count %>
      </strong>
      following
    </a>
    <a href="<%= followers_user_path(@user) %>">
      <strong id="followers" class="stat">
        <%= @user.followers.count %>
      </strong>
      followers
    </a>
  </div>
</div>

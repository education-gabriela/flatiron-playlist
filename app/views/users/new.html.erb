<%= form_for @user, html: {class: "ui form"} do |f| %>
    <div class="five wide field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="five wide field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="five wide field">
      <%= f.label :spotify_username %>
      <%= f.text_field :spotify_username %>
    </div>
    <div class="five wide field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="five wide field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <%= f.submit class: "ui green button" %>
<% end %>
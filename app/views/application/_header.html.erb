<div class="ui menu inverted">
  <div class="active blue item">
    Friends Playlist
  </div>
  <%= link_to "Home", root_path, class: "item" %>
  <% if current_user && current_user.id %>
      <%= link_to "Songs", songs_path, class: "item" %>
      <%= link_to "Artists", artists_path, class: "item" %>
      <%= link_to "Genres", genres_path, class: "item" %>
      <%= link_to "Playlists", playlists_path, class: "item" %>
      <%= link_to "Users", users_path, class: "item"%>
      <%= link_to "My Account", user_path(current_user), class: "item" %>
      <%= link_to "Log Out", sessions_destroy_path, method: "DELETE", class: "item" %><br>
  <% else %>
      <%= link_to "Sign Up", new_user_path, class: "item" %>
      <%= link_to "Log In", login_path, class: "item" %>
  <% end %>
</div>

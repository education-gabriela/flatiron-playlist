<%= form_for @song, html: {class: "ui form"} do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :artist_id %>
      <%= f.collection_select :artist_id, Artist.order(:name), :id, :name, {prompt: true}, {class: "ui search dropdown"} %>
    </div>
    <div class="field">
      <%= f.label :spotify_id, "Spotify ID" %>
      <%= f.text_field :spotify_id %>
    </div>
    <div class="field">
      <%= f.label :genre_ids, "Genres" %>
    </div>
    <div class="inline field">
      <%= f.collection_check_boxes :genre_ids, Genre.order(:name), :id, :name do |b| %>
          <div class="ui checkbox">
            <%= b.check_box %>
            <%= b.label %>
          </div>
      <% end %>
    </div>
    <%= f.submit class: "ui primary button" %>
<% end %>
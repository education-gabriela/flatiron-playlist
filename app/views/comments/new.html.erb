<%= form_for @comment, html: {class: "ui form"} do |f| %>
    <div class="field">
      <label>Comment Content</label>
      <%= f.text_area :body%>
      <%=f.hidden_field :user_id, :value => current_user.id%>
      <%=f.hidden_field :commentable_id, :value => @parent.id%>
      <%=f.hidden_field :commentable_type, :value => "Comment"%>
    </div>
    <%= f.submit class: "ui primary button" %>
<% end %>

<h2 class="ui dividing header">Artists</h2>
<%= paginate @artists, window: 2 %>
<p><%= link_to "Create new Artist", new_artist_path, class: "ui olive button" %></p>

<table class="ui teal table">
  <thead>
  <tr>
    <th class="three wide">Artist</th>
    <th class="two wide ui center aligned">Total Songs</th>
    <th>Songs</th>
  </tr>
  </thead>
  <tbody>
  <% @artists.each do |artist| %>
    <tr>
      <td><%= link_to artist.name, artist_path(artist) %></td>
      <td class="ui center aligned"><%= artist.total %></td>
      <td><%= artist.songs.limit(3).map(&:title).join(", ") %></td>
    </tr>
  <% end %>
  </tbody>
</table>
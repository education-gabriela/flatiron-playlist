<%= form_tag artists_search_path, method: :get do %>
    <div class="fluid ui action input">
      <%= text_field_tag :term, nil, placeholder: "Search..." %>
      <button type="submit" class="ui icon orange button">
        <i class="search icon"></i>
      </button>
    </div>
<% end %>
<br>
<% if params[:term] %>
    <p>Showing results for: <strong><%= params[:term] %></strong></p>
<% end %>